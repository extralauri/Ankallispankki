<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.extra.ankallispankki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="The Money Bin"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="The Money Bin"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="Deposit and withdraw"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="User Information"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity
            android:name=".TransfersActivity"
            android:label="Transfers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaymentActivity"
            android:label="Payment"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:label="Manage accounts"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity
            android:name=".CreateUserActivity"
            android:label="Manage users"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity xmlns:tools="http://schemas.android.com/tools"
            android:name=".HistoryActivity"
            android:label="Transaction history"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity
            android:name=".AccountListActivity"
            android:label="Account list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
        <activity
            android:name=".ManagerUserActivity"
            android:label="Manage users"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.extra.ankallispankki.MainActivity" />
        </activity>
    </application>

</manifest>